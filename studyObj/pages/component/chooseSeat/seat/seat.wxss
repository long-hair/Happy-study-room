/* pages/component/chooseSeat/seat/seat.wxss */
.chooseSeat{
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
}
.seat_wrap{
margin-top: 50rpx;
  display: flex;
}
.column{
  width: 200rpx;
  height: 1000rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.table{
  width:155rpx;
  height: 40rpx;
  margin: 20rpx 30rpx 0rpx 20rpx;
  text-align: center;
  line-height: 40rpx;

}
.row{
  width:180rpx;
  height: 90rpx;
  border-radius: 20rpx;
  background-color: rgb(170,170,170);
  margin: 20rpx 30rpx 0rpx 20rpx;
  text-align: center;
  line-height: 90rpx;

}
.status{
  display: flex;
}
.type{
  padding-top: 10rpx;
  position: fixed;
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
}
.box{
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
  border-radius: 10rpx;
}
.occupy{
  background-color: rgb(170,170,170);
}
.leisure{
  background-color:rgb(129,211,248) ;
}
.active{
  background-color: rgb(217,65,84);
}
.text{
  font-size: 26rpx;
  margin:  0 20rpx;
}
/* 0 */
.full{
  background-color: #ddd;
}
/* 1 */
.free{
  background-color: aqua;
}
/* 2 */
.check{
  background-color: red;
}
/*  
      class="row {{seats[table_num] ? seats[table_num[time_num] === 0 ? 'full' : seats[table_num[time_num] === 1 : 'free' ? seats[table_num[time_num] === 2 ? 'check' : '']}}" 

*/
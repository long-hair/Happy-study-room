/* pages/index/index.wxss */
.page{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 25rpx;
}
.head{
  width: 100%;
  height: 307rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.room{
  width: 100%;
}
.site{
  width: 100%;
}
.room_address{
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 14rpx;
}
.address_wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgb(242,242,242);
  border-radius: 33rpx;
  width: 100%;
  height: 66rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.location_icon{
  width: 36rpx;
  height: 36rpx;
}
.address_title{
  display: flex;
}
.address_btn{
  color: #8080ff;
  cursor: pointer;
}
.space{
  width: 100%;
  margin-top: 63rpx;
  font-size: 22rpx;
  color:#555 ;
  line-height: 45rpx;
}
.space_img{
  width: 700rpx;
  height: 307rpx;
}
.flow_wrap{
  margin-top: 63rpx;
}
.flow{
  width: 100%;
  height: 73rpx;
  border-radius: 10rpx;
  box-shadow: 0px 0px 5px rgba(127, 127, 127, 0.349019607843137);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 36rpx;
}
.flow_con{
  display: flex;
  color: #333;
}
.circle{
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #333;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
  line-height: 36rpx;
  margin-right: 20rpx;
}
.matters_wrap{
  width: 100%;
}
.ma_wrap{
  width: 100%;
  box-sizing: border-box;
  background-color:rgb(242,242,242) ;
  height: 530rpx;
  padding:20rpx  27rpx 36rpx ;
  border-radius: 20rpx;
}
.matters{
  font-size: 25rpx;
  color: #7f7f7f;
  line-height: 54rpx;
  font-weight: 400;
  margin-bottom: 30rpx;
}
.matters_title{
  font-weight: 600;
}
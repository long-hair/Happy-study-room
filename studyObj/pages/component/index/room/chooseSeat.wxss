/* pages/component/index/room/chooseSeat.wxss */
.chooseSeatWrap{
  width:100% ;
  height: 407rpx;
  padding:63rpx 0 0 0;
}
.title{
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 14rpx;
}
.seat-name{
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 14rpx;

}
.seat_wrap{
width: 100%;
display: flex;
justify-content: space-between;
align-items: center;
}
.double{
  width: 329rpx;
  height: 296rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 5px rgba(127, 127, 127, 0.349019607843137);
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  box-sizing: border-box;
  padding: 36rpx;
  font-size: 24rpx;
  line-height:40rpx ;
}
.double-name{
  font-size: 32rpx;
  font-weight: 500;
  color: black;
}
.tag{
  color: #999;
}
.btn-double{
  color: white;
  width: 181rpx;
  height:51rpx ;
  text-align: center;
  background: linear-gradient(90deg, rgba(140, 139, 206, 1) 3%, rgba(193, 220, 249, 1) 106%);
  border-radius: 25.5rpx;
  line-height: 51rpx;
}
.solo_wrap{
  height: 296rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 26rpx;
  color: #999;

}
.seat-solo-name{
  font-size: 28rpx;
  font-weight: 600;
  color: black;
  margin-bottom: 16rpx;
}
.solo{
  width: 340rpx;
  height:141rpx ;
  box-shadow: 0px 0px 5px rgba(127, 127, 127, 0.349019607843137);
  border-radius: 15rpx;
  padding: 27rpx;
  box-sizing: border-box;
}
.solo_head{
  display: flex;
  justify-content: space-between;
  /* align-items: ; */
}
.btn-one{
  color: white;
  width: 145rpx;
  height:36rpx ;
  font-size: 26rpx;
  text-align: center;
  background: linear-gradient(90deg, rgba(140, 139, 206, 1) 3%, rgba(193, 220, 249, 1) 106%);
  border-radius: 25.5rpx;
  line-height: 36rpx;
}

.ident .order{
  width: 90%;
  margin: 40rpx auto;
  box-shadow: 0 0 10rpx #ccc;
  box-sizing: border-box;
  padding: 20rpx;                                                                                                                                                                                                                                                                           
}
.ident .over{
  background-color: #F2F2F2;
}
.ident .order .info{
  height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  position: relative;   
}
.ident .order .info .tit{
  color: #333;
  font-weight: bold;
  margin-right: 10rpx;
}
.ident .order .info .con{
  color: #666;
}
.ident .over .info .tit{
  color: #777;
}
.ident .over .info .con{
  color: #999;
}
.ident .order .info .orderDetail{
  color: #8080FF;
  position: absolute;
  right: 0;
}
.ident .order .photo{
  margin: 15rpx 0;
  width: 100%;
  height: 70rpx;
  background: linear-gradient( to right, #8D8CD0, #B7B6FC );
  border-radius: 6rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ident .order .photo image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.ident .order .photo text{
  font-size: 30rpx;
  color: #fff;
}
.ident .order .other{
  overflow: hidden;
}
.ident .order .other .line{
  width: 100%;
  height: 1px;
  background-color: #ddd;
  margin: 20rpx 0;
}
.ident .order .other .con{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #666;
}
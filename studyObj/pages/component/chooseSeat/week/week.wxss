/* pages/component/chooseSeat/week/week.wxss */
.week_wrap{
  width:750rpx ;
  height: 58rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgb(208,208,246) ;
}
.scroll_wrap{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  flex-basis: 200rpx;
  white-space: nowrap;
}
.week_item{
  margin-right: 50rpx;
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  box-sizing: border-box;
}
.active{
  border-bottom: 6rpx solid rgb(134,133,232);
}
::-webkit-scrollbar{

  width: 0;
  
  height: 0;
  
  color: transparent;
  
  }